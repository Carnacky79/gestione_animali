{% extends 'base.html.twig' %}

{% block title %}Gestione Clienti{% endblock %}

{% block body %}

    {{ include('common/nav.html.twig', {active: 'home'}) }}

    <main class="container">
        <div class="bg-light p-5 rounded" style="margin-top:100px">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Cognome</th>
                    <th scope="col">Telefono</th>
                </tr>
                </thead>
                <tbody>

                {% for cliente in clienti %}
                    <tr>

                        <th scope="row">{{ cliente.id }}</th>

                        <td><a href="{{ path('app_clienti_show', {'id': cliente.id}) }}">{{ cliente.nome }}</a></td>
                        <td>{{ cliente.cognome }}</td>
                        <td>{{ cliente.telefono }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>



{% endblock %}
